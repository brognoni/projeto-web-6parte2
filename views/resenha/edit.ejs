<%- include ../layouts/header.ejs %>
<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-default">
            <div class="panel-heading"><%= title %></div>
            <div class="panel-body">
                <form class="form-horizontal" action="/resenha/edit/<%= resenha[0].id %>" method="POST">
                    <div class="form-group">
                      <label class="control-label col-sm-2" for="nome">Nome</label>
                      <div class="col-sm-10">
                        <input type="text" class="form-control" name="nome" id="nome" placeholder="Enter nome" value="<%= resenha[0].nome %>">
                      </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="autor">Autor</label>
                        <div class="col-sm-10">
                          <input type="text" class="form-control" name="autor" id="autor" placeholder="Autor" value="<%= resenha[0].autor %>">
                        </div>
                      </div>

                      <div class="form-group">
                        <label class="control-label col-sm-2" for="location">Categoria</label>
                        <div class="col-sm-10">
                          <select class="form-control" name="categoria" id="categoria">
                            <option value="">*Por favor, selecione uma*</option>
                            <option value="Comedia">Comedia</option>
                            <option value="Drama">Drama</option>
                            <option value="Terror">Terror</option>
                            <option value="Ação">Ação</option>
                            <option value="Documentário">Documentário</option>                   
                          </select>
                        </div>
                    </div>

                  <div class="form-group">
                    <label class="control-label col-sm-2" for="resenha">Resenha</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" name="resenha" id="resenha" placeholder="Resenha" value="<%= resenha[0].resenha %>">
                    </div>
                  </div>
                      
                    <div class="form-group"> 
                      <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <a href="/resenha"><button type="button" class="btn btn-default">Cancel</button></a>
                      </div>
                    </div>

                  </form>
            </div>
        </div>

    </div>
</div>

<%- include ../layouts/footer.ejs %>
