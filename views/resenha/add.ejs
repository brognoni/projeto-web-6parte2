<%- include ../layouts/header.ejs %>
<div class="row">
  <div class="col-sm-12">
      <div class="panel panel-default">
          <div class="panel-heading"><%= title %></div>
          <div class="panel-body">
              <form class="form-horizontal" action="/resenha/add" method="POST">
                  <div class="form-group">
                      <label class="control-label col-sm-2" for="autor">Autor</label>
                      <div class="col-sm-10">
                        <input type="text" class="form-control" name="autor" id="autor" placeholder="nome Autor....">
                      </div>
                  </div>
                  <div class="form-group">
                      <label class="control-label col-sm-2" for="nome">Nome</label>
                      <div class="col-sm-10">
                        <input type="text" class="form-control" name="nome" id="nome" placeholder="Nome do FIlme.....">
                      </div>
                  </div>
                  <div class="form-group">
                      <label class="control-label col-sm-2" for="location">Categoria</label>
                      <div class="col-sm-10">
                        <select class="form-control" name="categoria" id="categoria">
                          <option value="">*Por favor, selecione uma*</option>
                          <option value="Comedia">Comedia</option>
                          <option value="Drama">Drama</option>
                          <option value="Terror">Terror</option>
                          <option value="Ação">Ação</option>
                          <option value="Documentário">Documentário</option>                   
                        </select>
                      </div>
                  </div>
                  <div class="form-group">
                      <label class="control-label col-sm-2" for="data_de_publi">Data de Publicação</label>
                      <div class="col-sm-10">
                        <input type="text" class="form-control datepicker" name="data_de_publi" id="data_de_publi" placeholder="Data de Publicação">
                      </div>
                  </div>
                  <div class="form-group">
                    <label class="control-label col-sm-2" for="resenha">Resenha</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" name="resenha" id="resenha" placeholder="Resenha.....">
                    </div>
                </div>
                
                <div class="form-group">
                  <label class="control-label col-sm-2" for="link_imagem">link da imagem</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" name="link_imagem" id="link_imagem" placeholder="link_imagem.....">
                  </div>
              </div>

                  </div>
                    <div class="form-group"> 
                      <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <a href="/resenha"><button type="button" class="btn btn-default">Cancel</button></a>
                      </div>
                    </div>
                  </form>
            </div>
        </div>

    </div>
</div>

<%- include ../layouts/footer.ejs %>
